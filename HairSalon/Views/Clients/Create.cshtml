@{
    Layout = "_Layout";
}

@model HairSalon.Models.Client

<h1>Add Client</h1>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    <br>
    @Html.TextBoxFor(model => model.Name)
    <br>
    @Html.LabelFor(model => model.Description)
    <br>
    @Html.TextAreaFor(model => model.Description, new { @rows = 6, @cols = 50})
    <br>
    @Html.LabelFor(model => model.Stylist)
    <br>
    @Html.DropDownList("StylistId")
    <br>
    <input type="Submit" value="Add new client" />
}

@Html.ActionLink("Back to stylists", "Index", "Stylists")